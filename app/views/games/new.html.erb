<h1>New game</h1>
<% @letters.each do |letter| %>
  <button class="letter-button"><%= letter %></button>
<% end %>

<h4>What is the longest word you can find?</h4>
<form action="/score" method="POST" data-turbo="false" class="input-group w-75">
  <input type="text" name="word" placeholder="Enter word" class="form-control">
  <input type="submit" class="btn btn-outline-secondary rounded">
  <%= hidden_field_tag :letters, @letters %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
